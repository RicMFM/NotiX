@model List<NotiX.ViewModels.NoticiasFotosViewMo>
@using Microsoft.AspNetCore.Hosting
@inject IWebHostEnvironment env
@using System.IO

<div class="container">
    <h1 class="text-center mb-0">Notix</h1>
    <h4 class="text-center mb-4">As tuas notícias</h4>
    <div class="row">
        @foreach (var item in Model) {
            <div class="col-md-4 mb-4">
                <div class="card h-100 border-0 shadow-sm">
                    <!-- Imagem -->
                    @{
                        var nomeImagem = string.IsNullOrEmpty(item.Nome) ? "default.png" : item.Nome;
                        var caminhoFisico = System.IO.Path.Combine(env.WebRootPath, "Imagens", nomeImagem);
                        var caminhoImagem = System.IO.File.Exists(caminhoFisico)
                            ? Url.Content("~/Imagens/" + nomeImagem)
                            : Url.Content("~/Imagens/default.png");
                    }
                    <img src="@caminhoImagem" class="card-img-top noticia-img" alt="Imagem da Notícia" />
                    <!-- Corpo do cartão -->
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title mb-1">@item.Noticias.Titulo</h5>
                        <p class="text-muted small mb-2">
                            @item.Noticias.DataEscrita.ToString("dd/MM/yyyy") | @item.Noticias.Categoria.Categoria
                        </p>
                        <p class="card-text text-truncate-multiline" style="color:black">
                            @item.Noticias.Texto
                        </p>
                        <div class="mt-auto">
                            <a asp-controller="Noticias" asp-action="Details" asp-route-id="@item.Noticias.Id"
                               class="btn btn-link p-0 text-decoration-none fw-bold">
                                Ler mais
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
